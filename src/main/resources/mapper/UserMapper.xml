<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yyq.doormanage1.mapper.UserMapper">
	
	<resultMap type="com.yyq.doormanage1.entity.User" id="baseResult">
		<id property="id" column="id"/>
    	<result property="account" column="account"/>
    	<result property="username" column="username"/>
    	<result property="password" column="password"/>
    	<result property="sex" column="sex"/>
    	<result property="birthday" column="birthday"/>
    	<result property="phone" column="phone"/>
    	<result property="type" column="type"/>
    	<result property="status" column="status"/>
    	<result property="wechatId" column="wechat_id"/>
    	<result property="createDate" column="create_date"/>
    	<result property="updateDate" column="update_date"/>
<!--	    <collection property="list" ofType="com.yyq.doormanage1.entity.Room" column="id" select="com.yyq.doormanage1.mapper.RecordMapper.queryByUserId"></collection>-->
	</resultMap>

	<sql id="select">
		id,username,type,status,account,wechat_id,create_date,update_date,password,sex,birthday,phone
	</sql>

	<insert id="save" parameterType="com.yyq.doormanage1.entity.User" useGeneratedKeys="true" keyProperty="id" keyColumn="id" >
		INSERT INTO dm_user
		(
		account,
		username,
		password,
		sex,
		birthday,
		phone,
		type,
		status,
		token,
		wechat_id,
		create_date,
		update_date
		) VALUES (
		#{account},
		#{username},
		#{password},
		#{sex},
		#{birthday},
		#{phone},
		2,
		1,
		#{token},
		#{wechatId},
		SYSDATE(),
		SYSDATE()
		)
	</insert>

	<select id="queryByParams" parameterType="map" resultMap="baseResult">
		SELECT
		<include refid="select" />
		FROM dm_user
		<where>
			1 = 1
			<if test="params.username != null and params.username != ''">
				and username like concat('%',#{params.username},'%')
			</if>
			<if test="params.status != null">
				and status =  ${params.status}
			</if>
		</where>
	</select>

	<select id="login" resultType="com.yyq.doormanage1.entity.User">
		SELECT
		<include refid="select" />
		from dm_user
		<where>
			account = #{account} and password = #{password}
		</where>
	</select>
	
	<select id="queryById" resultMap="baseResult" >
		select <include refid="select"/> from dm_user
		<where>
			id = #{id}
		</where>
	</select>
	
	<select id="queryByWechatId" resultMap="baseResult" >
		select <include refid="select"/> from dm_user
		<where>
			wechat_id = #{wechatId}
		</where>
	</select>

	<update id="update" parameterType="com.yyq.doormanage1.entity.User" >
		update dm_user
		<trim prefix="SET" suffixOverrides=",">
			<if test="account != null">account=#{account},</if>
			<if test="username != null">username=#{username},</if>
			<if test="password != null">password=#{password},</if>
			<if test="sex != null">sex=#{sex},</if>
			<if test="birthday != null">birthday=#{birthday},</if>
			<if test="phone != null">phone=#{phone},</if>
			<if test="status != null">status=#{status},</if>
			<if test="wechatId != null">wechat_id=#{wechatId},</if>
		</trim>
		where id = #{id}
	</update>

	<insert id="apply" >
		INSERT INTO dm_user_room
		(
		user_id,
		room_id,
		activate
		) VALUES (
		#{userId},
		#{roomId},
		1
		)
	</insert>

</mapper>